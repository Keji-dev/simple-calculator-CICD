pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'dev', url: 'https://github.com/Keji-dev/unir-helloworld.git'
            }
        }
        
        stage('Build') {
            steps {
                echo 'NO HAY NADA QUE COMPILAR'
                sh 'ls -la'
            }
        }
        
        stage('Tests') {
            parallel {
                stage('Unit') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            sh '''
                                docker run -d -p 4500:4500 --name python-unit \
                                -v $(pwd)/test/unit/:/home/unit/ \
                                -v $(pwd)/:/workspace/ \
                                python:3.9.21-slim \
                                bash -c "export PYTHONPATH=/workspace:$PYTHONPATH && pip install pytest && pytest /home/unit --junitxml=/workspace/result-unit.xml"
                                docker wait python-unit
                                docker logs python-unit
                            '''
                        }
                    }
                }

                stage('Wiremock Start Up') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            sh '''
                                docker run -d -p 9090:8080 --name wiremock \
                                -v $(pwd)/test/wiremock/mappings:/home/wiremock/mappings \
                                wiremock/wiremock:latest

                                until curl -s http://localhost:9090/__admin; do
                                    echo "[INFO] Esperando que WireMock se inicie..."
                                    sleep 5
                                done

                                echo "[OK] WireMock está listo"
                            '''
                        }
                    }
                }
                
                stage('Rest') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            sh '''
                                docker run -d -p 5000:5000 --name flask \
                                -v $(pwd)/app:/workspace \
                                python:3.9.21-slim \
                                /bin/bash -c "cd /workspace && export FLASK_APP=api.py && export PYTHONPATH=/workspace:$PYTHONPATH && pip install flask pytest && flask run --host=0.0.0.0 --port=5000"

                                until curl -s http://localhost:5000; do
                                    echo "[INFO] Esperando que Flask se inicie..."
                                    sleep 5
                                done
                                echo "[OK] Flask está listo"

                                docker exec flask bash -c "export PYTHONPATH=/workspace:$PYTHONPATH && pytest /workspace --junitxml=/workspace/result-rest.xml"
                                
                                docker logs flask
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Results') {
            steps {
                junit 'result-unit.xml'
                junit 'result-rest.xml'
            }
        }
    }

    post {
        always {
            echo "[INFO] Cerrando contenedor WireMock..."
            sh 'docker stop wiremock || true'
            sh 'docker rm wiremock || true'
            sh 'docker stop python-unit || true'
            sh 'docker rm python-unit || true'
            sh 'docker stop flask || true'
            sh 'docker rm flask || true'
        }
    }
}
